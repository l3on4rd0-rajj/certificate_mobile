def comparar_arquivos(orig, adulterado):
    with open(orig, 'r', encoding='utf-8') as f1, open(adulterado, 'r', encoding='utf-8') as f2:
        orig_lines = f1.readlines()
        adulterado_lines = f2.readlines()

    alteracoes = False

    print("\nğŸ“˜ Comparando arquivos...\n")

    for i, (linha1, linha2) in enumerate(zip(orig_lines, adulterado_lines), 1):
        if linha1.strip() != linha2.strip():
            print(f"[Linha {i}] âš ï¸ ALTERADA:\n  Original:   {linha1.strip()}\n  Adulterado: {linha2.strip()}\n")
            alteracoes = True

    if len(orig_lines) != len(adulterado_lines):
        print("\nâš ï¸ Arquivos tÃªm nÃºmero de linhas diferentes:")
        print(f"  Original:   {len(orig_lines)} linhas")
        print(f"  Adulterado: {len(adulterado_lines)} linhas")
        alteracoes = True

    if not alteracoes:
        print("âœ… Nenhuma diferenÃ§a encontrada entre os arquivos.")


# ğŸ”½ Entrada interativa
if __name__ == "__main__":
    print("ğŸ›  Comparador de arquivos de CLP\n")
    arquivo_original = input("ğŸ“‚ Caminho do arquivo original: ").strip()
    arquivo_adulterado = input("ğŸ“‚ Caminho do arquivo adulterado: ").strip()
    
    try:
        comparar_arquivos(arquivo_original, arquivo_adulterado)
    except FileNotFoundError as e:
        print(f"âŒ Erro: {e}")
    except Exception as e:
        print(f"âŒ Erro inesperado: {e}")
